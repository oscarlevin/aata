    <exercise permid="kHP">
      <statement>
        <p permid="nCI">
          Show that each of the following numbers is algebraic over
          <m>{\mathbb Q}</m> by finding the minimal polynomial of the number over <m>{\mathbb Q}</m>.

          <ol permid="Ndu">
            <li permid="zJJ">
              <p permid="mZS">
                <m>\sqrt{ 1/3 + \sqrt{7} }</m>
              </p>
            </li>

            <li permid="fQS">
              <p permid="Thb">
                <m>\sqrt{ 3} + \sqrt[3]{5}</m>
              </p>
            </li>

            <li permid="LYb">
              <p permid="zok">
                <m>\sqrt{3} + \sqrt{2}\, i</m>
              </p>
            </li>

            <li permid="sfk">
              <p permid="fvt">
                <m>\cos \theta + i \sin \theta</m> for
                <m>\theta = 2 \pi /n</m> with <m>n \in {\mathbb N}</m>
              </p>
            </li>

            <li permid="Ymt">
              <p permid="LCC">
                <m>\sqrt{ \sqrt[3]{2} - i }</m>
              </p>
            </li>
          </ol>
        </p>
      </statement>
      <hint permid="ypV">
        <p permid="Tvw">
          (a) <m>x^4 - (2/3) x^2 - 62/9</m>; (c) <m>x^4 - 2 x^2 + 25</m>.
        </p>
      </hint>
    </exercise>

  
   
  


    <exercise permid="hNj">
      <statement>
        <p permid="kIc">
          Prove that <m>{\mathbb Q}(\sqrt{3}, \sqrt[4]{3}, \sqrt[8]{3}, \ldots )</m> is an algebraic extension of
          <m>{\mathbb Q}</m> but not a finite extension.
        </p>
      </statement>
    </exercise>

    <exercise permid="NUs">
      <statement>
        <p permid="QPl">
          Prove or disprove:
          <m>\pi</m> is algebraic over <m>{\mathbb Q}(\pi^3)</m>.
        </p>
      </statement>
    </exercise>

    <exercise permid="Ifg">
      <statement>
        <p permid="KZZ">
          Let <m>\alpha, \beta</m> be transcendental over <m>{\mathbb Q}</m>.
          Prove that either <m>\alpha \beta</m> or
          <m>\alpha + \beta</m> is also transcendental.
        </p>
      </statement>
    </exercise>


  </exercises>